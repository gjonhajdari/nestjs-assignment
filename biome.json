{
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"linter": {
		"rules": {
			"style": {
				"useImportType": "off",
				"noParameterAssign": "off"
			}
		}
	},
	"formatter": {
		"lineWidth": 95
	},
	"files": {
		"ignore": ["**/node_modules/**", "dist/**", "./migrations", "./test/db-test.sqlite"]
	}
}
